<h1>Restaurants</h1>

<%= link_to "Add new restaurant", new_restaurant_path %>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
    </li>
    <li>
      <%= restaurant.address %>
    </li>
    <li>
      <%= "⭐️" * restaurant.rating %>
    </li>
    <br>
  <% end %>
</ul>
